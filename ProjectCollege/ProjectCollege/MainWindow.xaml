<Window x:Class="ProjectCollege.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:ProjectCollege"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="НЭТК" Height="520" Width="800"
        MinHeight="520" MinWidth="800"
        Background="#E9E9E9">
    <Grid>
        <Frame Name="Frame" NavigationUIVisibility="Hidden"/>
        <StackPanel Visibility="Collapsed" Name="BackgroundLoading" Background="Gray" Grid.ColumnSpan="2" Opacity="0.4">

        </StackPanel>
        <Image Visibility="Collapsed" Name="Loading" Grid.Column="1" Height="100" gif:ImageBehavior.AnimatedSource="/Image/loading.gif"/>
    </Grid>
</Window>
